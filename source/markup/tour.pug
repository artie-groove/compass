extends ../templates/page-light.tpl.pug

block content
	.wrapper#content-tours
		.container.cards-grid
			.row
				.col-12
					h2.mb-3 Куда поехать
					p Выберите страну, о которой хотите узнать больше
			.row
				each destination, i in data.destinations
					.col-md-4.col-lg-3
						+destination-card(normalizeNumber(i+1), 'tours', destination, 'tour-catalog.html')
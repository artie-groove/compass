section#instagram.bg-dark.pt-0
	.container
		.row
			.col-12
				.d-flex.justify-content-between.align-items-center.flex-nowrap
					div
						h2.mb-3 Инстаграм
						p Придумать описание для этого блока, чтобы лучше раскрыть его суть
					.ribbon-controls(data-items-per-step='2')
						a.ribbon-control-prev(href='#ribbonInstagram' role='button' data-slide='prev')
							.sr-only Previous
						a.ribbon-control-next(href='#ribbonInstagram' role='button' data-slide='next')
							.sr-only Next
				.ribbon#ribbonInstagram
					.ribbon-inner
						each imgid in new Array('01', '02', '03', '04', '05', '06', '07', '08', '09', '10')
							.ribbon-item
								+instagram-card(imgid)